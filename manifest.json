{
  "manifest_version": 3,
  "name": "Screenshot for ChatGPT & Gemini",
  "version": "1.0",
  "description": "Add screenshot capture functionality to ChatGPT and Gemini",
  "permissions": [
    "activeTab",
    "desktopCapture",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
